    "title": "Results for an event",
    "description": "Performances of all athletes for a single/combined event.",
    "type": "object",
    "properties": {
        "performances": {
            "description": "Array of athletes' performances",
            "type": "array",
            "items": {
                "description": "Athlete and performance",
                "type": "object",
                "properties": {
                    "athlete": {
                        "$ref": "file:///Users/bilenahmet/Documents/athlib/json/athlete.json#"
                    },
                    "performance": {
                        "anyOf": [
                            {
                                "$ref": "file:///Users/bilenahmet/Documents/athlib/json/combined_performance.json#"
                            },
                            {
                                "$ref": "file:///Users/bilenahmet/Documents/athlib/json/performance.json#"
                            }
                        ]
                    }
                },
                "required": [
                    "athlete",
                    "performance"
                ]
            },
            "minItems": 1
        }
    },
    "required": [
        "performances"
    ]
}
